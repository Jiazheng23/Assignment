//main functions
void bookingMain();
void bookTicketHeading();
void stations();
void displayCoach();
void bookTicket();
void checkTicketStatus();
void editBooking();
void cancelBooking();
void displayBookedTickets();
void report();
//input functions
void getMemberID(char memberID[6], int warning);
