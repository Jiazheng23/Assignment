typedef struct {
	int  availableSeat;
	char departureT[20], Arrivalt[20], date[10], destination[20];
	double price;
}SchedulingModel;

typedef struct {
	char staffId[7],staffName[20],staffIc[15],staffPass[20];
	char position[7];
}AdminstratorModel;

typedef struct {
	char name[20], password[20], passwordRecovery[50],
		gender, icNo[15], contactNo[15], memberID[6];
}Member;

